/**app.wxss**/
page {
  /* font-family: -apple-system-font, 'Helvetica Neue', Helvetica, 'Microsoft YaHei', sans-serif; 'Helvetica Neue'; */
  font-family: 'Arial';
  letter-spacing: 2rpx;
  background-color: #F6F7FB;
}

.cf {
  overflow: hidden;
  clear: both;
}

.fl {
  float: left;
}

.fr {
  float: right;
}

.ov {
  overflow: hidden;
}

.inline {
  display: inline-block;
}

.ellipsis {
  overflow: hidden;
  white-space: nowrap;
  word-wrap: normal;
  text-overflow: ellipsis;
}

.ellipsis_multi_line {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

/** 按钮样式 */
button {
  padding: 0;
  background: #fff;
  border-radius: 0;
}

button::after {
  border-color: transparent;
}

.button-hover {
  background: #fff;
}

.none-info-view {
  width: 400rpx;
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: grey;
}

.nullText {
  color:#BDBAB8!important;
  font-size: 12px !important;
  width: 100%;
  height: 100%;
  text-align: center;
  line-height: 100vw;
}