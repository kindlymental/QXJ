/* pages/user/info/center/index.wxss */

.container {
  background: #F8F8F8;
  height: 100vh;
  font-family:PingFangSC-Regular,PingFang SC;
}

.friends-item {
  border-top: 1rpx solid #E7E7E7;
  display: flex;
  align-items: center;
  background-color: white;
  padding: 30rpx 44rpx;
}

.friends-item-left {
  width: 120rpx;
}

.friends-item-left image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
}

.friends-item-right {
  margin-left: 26rpx;
}

.friends-item-right .friends-name {
  height: 54rpx;
  line-height: 54rpx;
  color: #000000;
  font-weight: 600;
  font-size: 38rpx;
}

.friends-item-right .friends-phone {
  height: 38rpx;
  line-height: 38rpx;
  font-weight: 400;
  font-size: 26rpx;
  margin-top: 10rpx;
  color: #BBBBBB;
}

.member-view {
  position: absolute;
  right: 44rpx;
  font-size: 28rpx;
  background-color: #FFA030;
  border-radius: 26rpx;
  padding: 8rpx 30rpx;
  color: white;
}

/** 个人信息 */
.info-view {
  border-top: 16rpx solid #F6F7FB;
}

.info-view .info-item {
  height: 96rpx;
  width: 90vw;
  color: #303030;
  background: #FFF;
  display: flex;
  align-items: center;
  line-height: 96rpx;
  font-size: 28rpx;
  font-weight: 400;
  margin-bottom: 16rpx;
  padding: 0 5vw;
}

.info-item .title {
  margin-left: 32rpx;
}

.info-item image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 15rpx;
}

.info-item .goIcon{
  position: absolute;
  right: 60rpx;
}

.logout-view {
  border-top: 16rpx solid #f3f0f0;
  height: 96rpx;
  line-height: 96rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight:400;
  background: white;
  color: #F6646B;
}