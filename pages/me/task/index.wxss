/* pages/me/task/index.wxss */

page {
  height: 100vh;
  background: #F8F8F8;
}

button::after {
  border: none;
}

.menu-container {
  display: flex;
  justify-content: space-around;
  position: fixed;
  top: 8rpx;
  left: 0;
  right: 0;
}

.menu-container .menu-view {
  margin: 16rpx;
  text-align: center;
}

.menu-container .menu-view .text_selected {
  padding: 8rpx 0;
  border-bottom: 4rpx solid #FD9E00;
  color: #FD9E00;
  font-size: 26rpx;
}

.menu-container .menu-view .text_normal {
  padding: 8px 0;
  font-size: 26rpx;
  color: #ACACAC;
}

/** 列表 */
.list {
  margin-top: 80rpx;
}

.scroll-item-recommend {
  background: #fff;
  display: flex;
  flex-direction: column;
  margin: 15rpx 30rpx;
  border-radius: 12rpx;
}

/** 头部 */
.recommend-top {
  padding: 20rpx 22rpx 0 22rpx;
  height: 40rpx;
  display: flex;
  justify-content: space-between;
}

.recommend-top .recommend-order {
  font-size: 28rpx;
  color: #505050;
}

.recommend-top .recommend-state {
  font-size: 24rpx;
  color: #808080;
  font-weight: 400;
}

.recommend-top .recommend-number {
  font-size: 26rpx;
  color: #00C34A;
  font-weight: 400;
}

/** 中部 */
.recommend-con {
  display: flex;
  margin: 20rpx 22rpx;
}

.recommend-con .projectImg {
  width: 189rpx;
  height: 170rpx;
  border-radius: 8rpx;
  margin: 0 28rpx 0 0;
  box-shadow: 0px 2px 4px 0px rgba(0,0,0,0.09);
}

.recommend-con2 {
  display: flex;
  margin: 0 22rpx 20rpx 22rpx;
}

.recommend-center-view {
  display: flex;
  flex-direction: column;
  flex: 1;
  position: relative;
}

.recommend-bottom {
  margin-top: 12rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.recommend-bottom .recommend-name {
  font-size: 24rpx;
  height: 34rpx;
  color: #303030;
}

.recommend-bottom .recommend-money {
  font-size: 24rpx;
  font-weight: 400;
  color: #010101;
}

/* 时间 */
.recommend-bottom .recommend-desc {
  height: 30rpx;
  font-size: 22rpx;
  color: #A6A6A6;
}

.address-view {
  margin-top: 36rpx;
  display: flex;
  align-items: center;
}
.address-view image {
  width: 44rpx;
  height: 44rpx;
}
.address-view text {
  margin-left: 10rpx;
  color:#A6A6A6; 
  font-size:22rpx; 
  font-weight: 400;
}
/** 底部 */

.recomment-button {
  width: 152rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 26rpx;
  border-radius: 25rpx;
  text-align: center;
  margin-left: 14rpx;
  position: absolute;
  right: 0;
  bottom: 0;
  margin: auto;
}

.recommen-button-color {
  color: #FD9E00;
  border: 1rpx solid #FD9E00;
}

