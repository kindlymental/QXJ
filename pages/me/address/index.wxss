/* pages/address/list/index.wxss */

.addressList-list {
  padding-bottom: 100rpx;
  color: #737373;
}

.address-list-item {
  border-top: 16rpx solid #F6F7FB;
  padding: 20rpx 30rpx 24rpx 32rpx;
  background: #fff;
  display: flex;
  align-items: center;
}

.address-list-item .left-view {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  line-height: 80rpx;
  text-align: center;
  background:linear-gradient(90deg,rgba(215,215,215,1) 0%,rgba(172,172,172,1) 100%);
  color: white;
  font-weight: 400;
  font-size: 40rpx;
}

.address-list-item .center-view {
  margin-left: 30rpx;
  margin-right: 20rpx;
  flex: 1;
}

.address-list-item .top-view {
  display: flex;
  align-items: center;
  color: #737373;
  font-size: 26rpx;
}

.address-list-item .top-view .phone-num {
  margin-left: 20rpx; 
  color: #BDBAB8;
}

.address-list-item .default {
  background-color: #FFEDDE;
  color: #FF9000;
  border-radius: 4rpx;
  font-size: 22rpx;
  height: 32rpx;
  line-height: 32rpx;
  width: 70rpx;
  text-align: center;
  margin-left: 22rpx;
}

.address-list-item .center-view .list-item-address {
  color: #737373;
  font-size: 26rpx;
  margin-top: 6rpx;
}

.choose-address {
  display: flex;
  align-items: center;
  width: 80rpx;
  color: #BDBAB8;
  font-size: 26rpx;
}

.choose-address radio {
  transform: scale(0.6);
  margin-left: 10rpx;
}

.choose-address view {
  display: flex;
  justify-content: flex-end;
  color: #BDBAB8;
  font-size: 26rpx;
}

.choose-address .line {
  margin-right: 20rpx; 
  height: 34rpx; 
  width: 1rpx;
  background-color: #BDBAB8;
}

.address-add-view {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background-color: white;
  display: flex;
  align-items: center;
}

.address-add {
  width: 690rpx;
  color: #FD9E00;
  font-size: 30rpx;
  height: 72rpx;
  line-height: 72rpx;
  border-radius: 36rpx;
  border: 1rpx solid rgba(253,158,0,1);
}
