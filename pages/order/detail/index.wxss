/* pages/order/detail/index.wxss */

/** 头部状态 */
.order-state-view {
  background:linear-gradient(119deg,rgba(255,181,57,1) 0%,rgba(254,223,52,1) 100%,rgba(254,223,52,1) 100%);
  height: 260rpx;
  display: flex;
  align-items: center;
}

.order-state-view  .left-view {
  margin-left: 76rpx;
  flex: 1;
}

.order-state-view  .left-view .state {
  font-size: 30rpx;  
  font-weight: 600;
  color: #FFFFFF;
}

.order-state-view .left-view  .remark {
  margin-top: 10rpx;
  font-size: 26rpx;
  color: #FFFFFF;
  font-weight: 400;
}

.order-state-view .image-view {
  margin-left: 10rpx;
  margin-right: 76rpx;
  width: 196rpx;
  height: 192rpx;
}

.order-state-view .image-view image {
  width: 100%;
  height: 100%;
}

/** 操作按钮 */
.operation-view {
  background: #FFFFFF;
  height: 88rpx;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.operation-view .button {
  line-height: 34rpx;
  color: #9E9E9E;
  font-size: 24rpx;
  text-align: center;
}

.operation-view .horizon-line {
  width: 1rpx;
  height: 44rpx;
  color: #BDBAB8;
}

.operation-view .button image {
  width: 34rpx;
  height: 30rpx;
}

.operation-view .button text {
  margin-left: 18rpx;
}

/** 快递信息 */
.delivery-view {
  margin: 0 30rpx;
  font-size: 28rpx;
  color: #B5B6B9; 
}

.delivery-view input {
  height: 76rpx;
  border-radius: 4rpx;
  background-color: #F6F7FB;
}

/** 猜你喜欢 */
.recommend-view {
  border-top: 16rpx solid #F6F7FB;
  background-color: white;
}

.recommend-view .recommend-title {
  font-size: 30rpx;
  font-weight: 400;
  color: #121212;
  padding: 24rpx 30rpx;
}

/** 纵向 */
.project-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin: 0 30rpx 0 30rpx;
}

.project-list .item {
  margin-bottom: 28rpx;
}
