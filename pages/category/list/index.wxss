/* pages/category/list/index.wxss */

.container {
  background: #fff;
  position: relative;
  width: 100%;
  height: 90vh;
  border-top: 1rpx solid #E7E7E7;
  display: flex;
  flex-direction: row;
}

/* 分类 */
.menu-container {
  display: flex;
  justify-content: space-around;
  background: #F6F7FB;
  white-space: nowrap;
  z-index: 999;
  width: 148rpx;
}

.menu-container .menu-view {
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 30rpx;
  font-weight: 400;
}

.menu-container .text_selected {
  border-left: 6rpx solid #FBA953;
  color: #605F64;
}

.menu-container .text_normal {
  border-left: 6rpx solid transparent;
  color: #ADB1BA;
}

/* list-item */

.project-list {
  flex: 1;
}

.project-item {
  border-bottom: 1rpx solid rgb(231, 228, 228);
}

