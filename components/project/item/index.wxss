/* components/project/item/index.wxss */

.item-container {
  position: relative;
  margin: 0 22rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.item-container .content {
  display: flex;
  flex-direction: column;
  width: 312rpx;
}

.content .project-h1 {
  font-size: 34rpx;
  color: #000000;
  font-weight: 400;
  height: 48rpx;
  line-height: 48rpx;
  margin-top: 28rpx;
}

.content .project-h2 {
  margin-top: 6rpx;
  height: 74rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: #737373;
}

.content-h3 {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 10rpx 20rpx 20rpx 0;
}

.content-h3 .project-h3 {
  line-height: 34rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #FD9E00;
}

.content-h3 .amount-view {
  display: flex;
  align-items: center;
}

.amount-view .project-h4 {
  color: #BBBBBB;
  font-size: 22rpx;
  line-height: 26rpx;
  font-weight: 400;
  margin-left: 4rpx;
}

.item-container image {
  width: 210rpx;
  height: 190rpx;
  border-radius: 6rpx;
}
