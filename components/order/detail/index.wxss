/* components/order/detail/index.wxss */

/** 订单信息 */
.order-detail-view {
  background: #fff;
}

/** 用户信息 */
.user-view {
  padding: 34rpx 44rpx;
  border-bottom: 16rpx solid #F5F5F5;
  display: flex;
  align-items: center;
}

.user-view image {
  width: 88rpx;
  height: 88rpx;
}

.user-view .right-view {
  margin-left: 28rpx;
}
.user-view .right-view .user-name-view {
  display: flex;
  align-items: center;
  height: 34rpx;
  position: relative;
}

.user-name-view .content {
  margin-top: 4rpx;
  color: #737373;
  font-size: 28rpx;
  font-weight: 400;
  line-height: 40rpx;
}

.user-view .right-view .user-address-view {
  margin-top: 10rpx;
  color: #737373;
  font-size: 28rpx;
  font-weight: 400;
  line-height: 40rpx;
}

/** 项目信息 */
.payment-view {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: white;
  padding: 18rpx 30rpx;
}

.payment-view .name-view {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #000000;
  font-size: 32rpx;
  font-weight: 400;
}

.payment-view .center-view {
  width: 100%;
  margin-top: 32rpx;
  display: flex;
  align-items: center;
}

.payment-view .image-view {
  width: 190rpx;
  height: 170rpx;
}

.payment-view .image-view image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
  box-shadow:0px 2px 4px 0px rgba(0,0,0,0.09);
}

/** 项目信息 */
.payment-view .right-view {
  flex: 1;
  height: 180rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin-left: 24rpx;
  font-size: 26rpx;
  color: #737373;
}

.payment-view .right-view .top-view {
  display: flex;
  justify-content: space-between;
}

.top-view .prices {
  font-size:22rpx;
  color:#010101;
  margin-left: 30rpx;
}

.payment-view .right-view .bottom-view {
  color: #A6A6A6;
  font-size: 22rpx;
}

.bottom-view .spec {
  margin-top: 6rpx;
  height: 34rpx;
  line-height: 34rpx;
}

/** 项目 */
.order-detail-view .project-view {
  width: 100%;
  margin-top: 26rpx;
}

.project-view .title-view {
  display: flex;
  justify-content: space-between;
  height: 34rpx;
  line-height: 34rpx;
  font-size: 24rpx;
  margin-top: 12rpx;
}

.project-view .title-view .left {
  color: #909090;
}

.project-view .title-view .right {
  color: #303030;
}


/** 订单信息 */
.order-info-view {
  border-top: 16rpx solid #F8F8F8;
  padding: 28rpx 30rpx;
  background: white;
}

.order-info-view-tit {
  font-size: 30rpx;
  font-weight: 400;
  height: 46rpx;
  line-height: 46rpx;
  color: #121212;
}

/** 订单信息 */
.order-info-view .order-info-view-content {
  margin-top: 32rpx;
  margin-left: 4rpx;
}

.order-info-view .order-info-view-content .item {
  margin-top: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 34rpx;
  line-height: 34rpx;
  font-size: 24rpx;
  color: #121212;
  font-weight: 400;
}
