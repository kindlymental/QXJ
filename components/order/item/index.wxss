/* components/order/item/index.wxss */

.scroll-item-recommend {
	background: #fff;
	display: flex;
	flex-direction: column;
	border-radius: 12rpx;
	margin: 16rpx 32rpx;
}

/** 头部 */
.recommend-top {
	padding: 22rpx;
	display: flex;
	justify-content: space-between;
	align-items: center;
}

.recommend-top .recommend-order {
	font-size: 32rpx;
	color: #000000;
}

.recommend-top .recommend-state {
	font-size: 22rpx;
	color: #FD9E00;
	font-weight: 400;
}

/** 中部 */
.recommend-con {
	display: flex;
	margin: 0 20rpx 22rpx 20rpx;
	position: relative;
}

.recommend-con .projectImg {
	width: 180rpx;
	height: 160rpx;
	border-radius: 8rpx;
	box-shadow: 0px 2px 4px 0px rgba(0,0,0,0.09);
}

.recommend-con-main {
	display: flex;
	justify-content: space-between;
}
.buy_num {
	text-align: right;
	color: #737373;
}
.recommend-con .recommend-name {
	font-size: 26rpx;
	width: 326rpx;
	line-height: 37rpx;
	margin-top: 8rpx;
	margin-left: 22rpx;
	color: #737373;
	-webkit-line-clamp: 3;
}

.recommend-con .recommend-money {
	margin-top: 8rpx;
	margin-left: 28rpx;
	font-size: 30rpx;
	font-weight: 400;
	height: 50rpx;
	line-height: 50rpx;
	color: #010101;
}

.recommend-con .bottom-info {
	position: absolute;
	bottom: 0;
	right: 0;
}

/** 底部 */

.recomment-bottom {
	margin: 20rpx;
	display: flex;
	justify-content: flex-end;
}

.recomment-button {
	width: 200rpx;
	height: 60rpx;
	line-height: 60rpx;
	border-radius: 60rpx;
	font-size: 26rpx;
	text-align: center;
	margin-left: 14rpx;
}

.recommen-button-deep-color {
	color: #FD9E00;
	border: 1rpx solid #FD9E00;
}

.recommen-button-tint-color {
	color: #A6A6A6 ;
	border: 1rpx solid #989898;
}

